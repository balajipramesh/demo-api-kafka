{
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist/src",
    "strictNullChecks": true,
    "lib": [
      "es2016",
      "dom",
      "es6",
      "scripthost"
    ],
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
